.row
  .col-md-3
    = render 'shared/user_info', user: @user
    %h4.description
      = @user.description
    %h4
      = @user.location
    %h4
      = link_to @user.website_url, @user.website_url
    - if @user == current_user
      = link_to 'Edit profile', edit_user_path
  .col-md-6
    - unless @user == current_user
      = render 'shared/follow_form' if signed_in?
    %ol.tweets
      = render @tweets
    = paginate @tweets
